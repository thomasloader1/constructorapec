mixin galeriaDeObras(obras)
  each obra, i in obras
    article(class=`item-obra-${i}`, data-toggle="modal", data-target=`#${obra.id}`)
      .d-flex.align-items-center.justify-content-center
        p= obra.title
    +modalParaLasObras(obra)

mixin modalParaLasObras(objObra)
  //  Central Modal Small 
  .modal.fade(id=`${objObra.id}`,tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    //  Change class .modal-sm to change the size of the modal 
    .modal-dialog.modal-sm(role="document")
      .modal-content
        .modal-header
          h4.modal-title.w-100 #{objObra.title}
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") Ã—
        .modal-body #{objObra.description}
          .text-center
            +carouselPhotos(objObra)
