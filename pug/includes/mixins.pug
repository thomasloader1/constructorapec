            //-     - i++
          
        .modal-footer
          button.btn.btn-secondary.btn-sm(type="button", data-dismiss="modal") Close
          button.btn.btn-primary.btn-sm(type="button") Save changes
  //  Central Modal Small 

mixin carouselPhotos(obra)
  .carousel.slide(data-ride="carousel", id=`carousel-${obra.id}`)
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src="https://mdbootstrap.com/img/Photos/Slides/img%20(45).jpg", alt="First slide")
      .carousel-item
        img.d-block.w-100(src="https://mdbootstrap.com/img/Photos/Slides/img%20(46).jpg", alt="Second slide")
      .carousel-item
        img.d-block.w-100(src="https://mdbootstrap.com/img/Photos/Slides/img%20(47).jpg", alt="Third slide")
    a.carousel-control-prev(href=`#carousel-${obra.id}`, role="button", data-slide="prev")
      span.carousel-control-prev-icon(aria-hidden="true")
      span.sr-only Previous
    a.carousel-control-next(href=`#carousel-${obra.id}`, role="button", data-slide="next")
      span.carousel-control-next-icon(aria-hidden="true")
      span.sr-only Next